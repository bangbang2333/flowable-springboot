<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

    <springProperty scope="context" name="springAppName"
                    source="spring.application.name" />

    <property name="log_dir" value="${springAppName}"/>
    <appender name="demo_file_log" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>demo-server.log</file>
        <Prudent>true</Prudent>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log_dir}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>15</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>{"client": "demo", "timestamp": "%date{yyyy-MM-dd HH:mm:ss}", "log_level": "%level", "message":
                "%message", "stack_trace": "%replace(%exception){'\n\s*', '\\n'}%nopex" }%n
            </pattern>
            <charset class="java.nio.charset.Charset">UTF-8</charset>
        </encoder>
    </appender>
    <root level="ERROR">
        <appender-ref ref="demo_file_log"/>
    </root>
    <appender name="demo_console_log" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%-5level] %file:[%line] - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="demo_console_log"/>
    </root>
</configuration>