<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

    <springProperty scope="context" name="springAppName"
                    source="spring.application.name" />

    <appender name="demo_console_log" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] %file:[%line] - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="demo_console_log"/>
    </root>
</configuration>